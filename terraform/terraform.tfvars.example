# Example Terraform variables file
# Copy this file to terraform.tfvars and edit with your values

# Your GCP project ID
gcp_project_id = "security-ai-monitor-2025"

# Region for GCP resources
gcp_region = "us-central1"

# Storage bucket name for the Cloud Function code
# Must be globally unique
storage_bucket_name = "security-ai-monitor-function-bucket"

# Service account ID for Cloud Function
service_account_id = "security-monitor"

# Cloud Function name
function_name = "scc-findings-processor"

# Pub/Sub topic name for SCC notifications
pubsub_topic_name = "scc-notifications-topic"
